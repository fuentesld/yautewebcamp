<%- include('./includes/head.ejs') %>
  <link rel="stylesheet" href="css/tobii.min.css">
</head>
<body>

  <%- include('./includes/navegacion.ejs') %>


  
  <section class="section contenedor">
    <h2>Calendario de eventos</h2>
    <div class = "calendario">

    <% Object.entries(eventos).forEach(elemento => {
      const [fechaActividades, actividades] = elemento %>

      <h3>
        <i class = "fa fa-calendar"></i> <%= fechaActividades  %>
      </h3>

      <div class="eventos">
        <% actividades.forEach(actividad => { %>
          <div class="dia">
            <p class="titulo"><%= actividad.nombre %></p>
            <p class="hora">
              <i class="fa fa-clock"></i> <%= actividad.horaString  %>
            </p>
            <p>
              <i class="<%= actividad.icono_catevento %>"></i> <%= actividad.descripcion_catevento  %>
            </p>
            <p>
              <i class="fa fa-user"></i> <%= actividad.invitado  %>
            </p>
          </div>
        <% }) %> <!--* endforeach actividad-->
      
      </div>

      <% }) %> <!--* endforeach eventos-->
    </div>

  </section>
  
  <%- include('./includes/footer.ejs') %>

</body>
</html>