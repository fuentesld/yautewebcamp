<section class="invitados section contenedor">
  <h2>Nuestros Invitados</h2>

  <% invitados.forEach(invitado => { %>
    
    <div id="invitado<%= invitado.invitado_id %>" class="invitado-modal">
      <div class="invitado-info">

        <h2><%= invitado.nombre %> <%= invitado.apellido %></h2>
        <div>
          <img src="img/invitados/<%= invitado.url_imagen %>" alt="invitado" >
        </div>

        <p ><%= invitado.descripcion %></p>

      </div>
    </div>

  <% }) %>

  <ul class="lista-invitados">
    <% invitados.forEach(invitado => {%>

      <li class="invitado">
        <a href="#invitado<%= invitado.invitado_id %>"  class="lightbox" data-type="html" data-group="invitados">
          <img src="img/invitados/<%= invitado.url_imagen %>" alt="invitado">
          <p><%= invitado.nombre %> <%= invitado.apellido %></p>
        </a>
      </li>

    <% }) %>
  </ul>

</section>